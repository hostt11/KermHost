{
  "name": "kermhost",
  "version": "1.0.0",
  "description": "Plateforme d'hébergement de bots WhatsApp via Heroku",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "init": "node scripts/init-database.js",
    "test": "jest --testTimeout=10000",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "cleanup": "node scripts/cleanup.js",
    "backup": "node scripts/backup.js",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "stats": "node scripts/stats.js",
    "heroku:test": "node scripts/test-heroku.js",
    "email:test": "node scripts/test-email.js",
    "build": "echo 'No build step required'",
    "postinstall": "echo 'Installation terminée - KermHost' && node scripts/postinstall.js"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "heroku",
    "hosting",
    "deployment",
    "kerm",
    "whatsapp-bot"
  ],
  "author": "KermHost Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kermhost/kermhost"
  },
  "bugs": {
    "url": "https://github.com/kermhost/kermhost/issues"
  },
  "homepage": "https://kermhost.com",
  "engines": {
    "node": "18.x || 20.x || 22.x",
    "npm": "9.x || 10.x"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "chart.js": "^4.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.0",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "heroku-client": "^3.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "resend": "^4.0.0",
    "socket.io": "^4.8.0",
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.14.11",
    "@types/node-cron": "^3.0.11",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "optionalDependencies": {
    "sharp": "^0.33.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
